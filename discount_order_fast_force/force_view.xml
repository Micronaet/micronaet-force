<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_fast_order_page_force_discount_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="order_fast_force_page.view_fast_order_page_force_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Force']/group" position="after">
                   <group colspan="4" col="4">
                         <field name="force_discount" />
                         <button name="force_order_discount" string="Force discount" type="object" confirm="Force change discount value in all lines, confirm?"/>
                   </group>      
                </xpath>
            </field>            
        </record>

    </data>
</openerp>

