<?xml version="1.0"?>
<openerp>
    <data>
         <record model="ir.ui.view" id="view_force_discount_invoice_form">
             <field name="name">account.invoice.form</field>
             <field name="model">account.invoice</field>
             <field name="inherit_id" ref="account.invoice_form"/>
             <field name="arch" type="xml">
                 <field name="currency_id" position="after">
                     <group name="force_discount" colspan="4" col="4" attrs="{'invisible':[('state','!=','draft')]}">
                         <field name="force_discount" />
                         <button name="force_invoice_discount" string="Force discount" type="object" />
                     </group>
                 </field>
             </field>
         </record>
    </data>
</openerp>

